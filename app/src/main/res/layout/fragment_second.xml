<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <ImageView
        android:id="@+id/program_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/program_icon"
        app:layout_constraintEnd_toStartOf="@+id/temperatureText"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/temperatureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text=""
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/program_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/program_icon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changeSettingsButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:text="@string/change_settings"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/temperatureText"
        app:layout_constraintStart_toStartOf="@+id/program_icon"
        app:layout_constraintTop_toBottomOf="@+id/program_icon" />

    <ImageView
        android:id="@+id/ovenIcon"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/oven_icon"
        app:layout_constraintEnd_toEndOf="@+id/changeSettingsButton"
        app:layout_constraintStart_toStartOf="@+id/changeSettingsButton"
        app:layout_constraintTop_toBottomOf="@+id/changeSettingsButton"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/turnOffButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:text="@string/turn_off"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/ovenIcon"
        app:layout_constraintStart_toStartOf="@+id/ovenIcon"
        app:layout_constraintTop_toBottomOf="@+id/ovenIcon" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:textColor="@color/companyBlue"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ovenIcon"
        app:layout_constraintEnd_toStartOf="@+id/ovenIcon"
        app:layout_constraintTop_toTopOf="@+id/ovenIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>